---
interface Props {
	position: number
	content: string
}

const { position, content } = Astro.props
---

<div class='flex flex-col items-start gap-3 max-w-md'>
	<div
		class='text-2xl font-bold w-15 text-green-600 border-t-4 border-green-600 pt-1'
	>
		{position}
	</div>
	<p class='text-gray-800 text-lg leading-relaxed'>
		{content}
	</p>
</div>
